{
  "name": "eidetically",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "cd web && PORT=8000 TAILWIND_MODE=watch craco start",
    "build": "cd web && craco build",
    "type-check": "cd web && tsc --project tsconfig.json --pretty --noEmit",
    "lint": "cd web && eslint --ext js,jsx,ts,tsx --fix",
    "install:web": "cd web && npm install",
    "eslint": "eslint --config .eslintrc.js",
    "prettier": "prettier --write \"./**/*.{md,jsx,json,html,css,js,yml}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "npm run prettier && npm run type-check && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DukeManh/eidetically.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DukeManh/eidetically/issues"
  },
  "homepage": "https://github.com/DukeManh/eidetically#readme",
  "devDependencies": {
    "husky": "^7.0.1",
    "prettier": "^2.3.2",
    "lint-staged": "^11.0.0"
  }
}
