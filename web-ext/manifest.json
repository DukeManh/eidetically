{
  "manifest_version": 3,
  "name": "Eidetically",
  "version": "1.0",
  "author": "Duke Manh",

  "description": "Extension to allow saving images to firebase storage",
  "homepage_url": "https://eidetically.vercel.app/",

  "icons": {
    "48": "icons/logo48.png",
    "96": "icons/logo96.png"
  },

  "permissions": ["background", "storage"],

  "host_permissions": ["https://*/"],

  "web_accessible_resources": [
    {
      "resources": ["icons/*", "scripts/content/content.js", "scripts/content/lib.js"],
      "matches": ["https://*/"]
    }
  ],

  "browser_action": {
    "default_icon": "icons/logo32.png",
    "default_title": "Eidetically",
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/utils/jquery.min.js", "scripts/content/content_script.js"],
      "css": ["scripts/content/content.css"],
      "all_frames": true,
      "exclude_matches": ["https://eidetically.vercel.app/*"]
    }
  ],

  "background": {
    "persistent": true,
    "scripts": [
      "scripts/utils/jwt-decode.js",
      "scripts/utils/firebase-app.js",
      "scripts/utils/firebase-auth.js",
      "scripts/utils/firebase-firestore.js",
      "scripts/utils/firebase-storage.js",
      "scripts/utils/uuidv4.min.js",
      "scripts/utils/image-blob-reduce.js",
      "background.js"
    ]
  },

  "content_security_policy": {
    "sandbox": "script-src 'self' https://cdn.firebase.com https://securetoken.googleapis.com https://apis.google.com https://www.gstatic.com; object-src 'self'"
  }
}
